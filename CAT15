#include <stdio.h>
power(int n,int x)
{
    if(x>1)
    {
        return n*power(n,x-1);
    }
    else
    {
        return n;
    }
}
int main() 
{
    int n,x;
    printf("Enter the number ");
    scanf("%d",&n);
    printf("Enter the power ");
    scanf("%d",&x);
    int ans=power(n,x);
    printf("Answer= %d",ans);
}
